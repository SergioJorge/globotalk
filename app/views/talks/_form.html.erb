<%= form_for(@talk) do |f| %>
  <% if @talk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@talk.errors.count, "erro") %></h2>
      <ul>
      <% @talk.errors.full_messages.each do |msg| %>
        <li><span class="error-blacktxt"><%= msg %></span></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :nome %>
    <%= f.text_field :nome %>
  <div class="field">
    <%= f.label :data %>
    <%= f.date_select :data, order: [:day, :month, :year ], prompt: {day: "Dia", month: "Mês", year: "Ano"}, start_year: Time.now.year, end_year: Time.now.year%>
  </div>
  <div class="field">
    <%= f.label :responsavel, "Responsável" %>
    <%= f.text_field :responsavel %>
  </div>
  <div class="field">
    <%= f.label :gravatar_email %>
    <%= f.text_field :gravatar_email %>
  </div>
  <div class="field">
    <label for="talk_mais_sobre">Sobre<span class="counter_sobre"></span></label>
    <%= f.text_area :mais_sobre  %>
  </div>
  <div class="actions">
    <%= f.submit "Criar", class: "btn btn-primary" %>
    <%= link_to 'Voltar', talks_path, class: "btn btn-lista-adicionar" %>
  </div>
<% end %>
<%= javascript_include_tag "talk" %>